<%= form_for(@content_set) do |f| %>
  <% if @content_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content_set.errors.count, "error") %> prohibited this content_set from being saved:</h2>

      <ul>
      <% @content_set.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.hidden_field :date, :value => Time.new %>
  </div>
  <div class="field">
    <ul>
      <% @questions.each do |question| %>
        <li>
          <%= check_box_tag "content_set[question_ids][]", question.id, @content_set.questions.include?(question) %>
          <%= question.question %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
